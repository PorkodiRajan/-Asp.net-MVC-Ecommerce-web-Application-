@model IEnumerable<Product>
<!-- Carousel -->
<div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/product/banner.webp" class="d-block  carousel-img" alt="First slide">
        </div>
        
    </div>
</div>
<div class="row pb-3">
    @foreach(var product in Model)
    {   
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card card_movies border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@product.ImageUrl" class="card-img-top rounded"/>
                        <div class="card-body pb-0">
                            <div class="pl-1 card-title">
                                <h5 class="card-title text-dark text-center">@product.Title</h5>
                                <p class="text-center">by <b>@product.Author</b></p>
                            </div>
                            <div class="pl-1">
                                <h6 class="text-dark opacity-75 text-center"><span class="text-decoration-line-through">@product.ListPrice.ToString("c")</span></h6>
                            </div>
                            <div class="pl-1">
                                <h6 class="text-dark opacity-75 text-center">As low as : <span>@product.Price100.ToString("c")</span></h6>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Details"
                               asp-route-productId="@product.Id"
                            class="btn btn-primary bg-gradient border-0 form-control details-button mt-2">
                                Details
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    }
</div>